<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/msg_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:fitsSystemWindows="true"
            android:background="@drawable/ic_user_bg"
            android:theme="@style/Theme.AppCompat"
            app:layout_behavior="com.xinmei365.font.ui.widget.FlingBehavior">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clipChildren="true"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/image_select_close"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_user_back"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="6dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="13dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/image_select_close" />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="#FFFFFF"
                        android:textSize="13.67sp"
                        app:layout_constraintStart_toEndOf="@+id/profile_image"
                        app:layout_constraintTop_toTopOf="@+id/profile_image" />
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/official_sign"
                        android:layout_width="27dp"
                        android:layout_height="13.67dp"
                        android:src="@drawable/ic_official_sign"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@+id/user_name"
                        app:layout_constraintTop_toTopOf="@+id/user_name"
                        app:layout_constraintBottom_toBottomOf="@+id/user_name" />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/app_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@+id/profile_image"
                        app:layout_constraintTop_toBottomOf="@+id/user_name" />
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/gender_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@+id/profile_image"
                        app:layout_constraintTop_toBottomOf="@+id/app_id" />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/intro_string"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="11dp"
                        android:textColor="#FFFFFF"
                        android:text="没有简介"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profile_image" />
                    <LinearLayout
                        android:id="@+id/focus_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/intro_string"
                        app:layout_constraintBottom_toBottomOf="parent" >
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/focus_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="10"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/focus_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="关注"
                            android:textColor="#FFFFFF"
                            android:textSize="8sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/follow_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="46dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@+id/focus_area"
                        app:layout_constraintTop_toTopOf="@+id/focus_area">
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/follow_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="10"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/follow_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="粉丝"
                            android:textColor="#FFFFFF"
                            android:textSize="8sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/work_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="46dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@+id/follow_area"
                        app:layout_constraintTop_toTopOf="@+id/follow_area">
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/work_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="10"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/work_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="获赞与收藏"
                            android:textColor="#FFFFFF"
                            android:textSize="8sp" />
                    </LinearLayout>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/focus_action"
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:text="@string/follow"
                        android:background="@drawable/ic_ok"
                        app:layout_constraintEnd_toStartOf="@+id/chat_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/chat_icon"/>
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/chat_icon"
                        android:layout_width="34dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/ic_user_chat_icon_bg"
                        android:src="@drawable/ic_user_chat_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:tabGravity="fill"
                android:background="@drawable/user_tab_layout_bg"
                app:tabTextAppearance="@style/tab_text"
                app:tabSelectedTextColor="#7DCDF3"
                app:tabIndicator="@drawable/ic_label_tab_indicator"
                app:tabRippleColor="@android:color/transparent"
                app:tabIndicatorFullWidth="false" />
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior" />
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>