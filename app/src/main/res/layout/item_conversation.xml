<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="33.33dp"
        android:layout_height="33.33dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13.33dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/avatar" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="13.33dp"
        android:layout_marginEnd="13.33dp"
        android:layout_toEndOf="@id/iv_avatar"
        android:layout_toStartOf="@id/tv_time"
        android:ellipsize="end"
        android:gravity="start"
        android:singleLine="true"
        android:textSize="12sp"
        android:textColor="#666666" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_below="@id/tv_name"
        android:layout_toEndOf="@id/iv_avatar"
        android:layout_marginTop="9.33dp"
        android:layout_marginStart="13.33dp"
        android:layout_marginEnd="13.33dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#999999"
        android:textSize="10sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_message"
        android:layout_alignParentEnd="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginTop="15.67dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="10sp"
        android:textColor="#999999" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_unread"
        android:layout_width="16.67dp"
        android:layout_height="16.67dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_time"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="@drawable/ic_msg_count"
        android:textColor="@color/white"
        android:textSize="10sp" />

</RelativeLayout>