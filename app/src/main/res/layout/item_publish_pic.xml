<?xml version="1.0" encoding="utf-8"?>
<com.xinmei365.font.ui.widget.RatioCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="1.67dp"
    android:layout_marginEnd="1.67dp"
    android:background="@android:color/white"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/image_area"
            android:layout_width="83.33dp"
            android:layout_height="83.33dp"
            android:layout_centerInParent="true">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <com.xinmei365.font.ui.widget.StickerView
                android:id="@+id/sticker_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/child_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/image_area"
            android:layout_alignTop="@+id/image_area"
            android:src="@drawable/ic_publish_pic_delete"/>

    </RelativeLayout>
</com.xinmei365.font.ui.widget.RatioCardView>