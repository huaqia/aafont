<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6.33dp"
            android:layout_marginTop="4.33dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="12.67dp"
            android:textColor="#666666"
            android:text="@string/help_feedback"
            android:textSize="14.67sp"
            android:layout_toEndOf="@+id/close"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/comment_action"
            android:layout_width="50dp"
            android:layout_height="23.33dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="提交"
            android:textSize="10sp"
            android:background="@drawable/ic_publish_action"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/feedback_content"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="top"
        android:hint="@string/hint_feedback"
        android:textColorHint="#cccccc"
        android:background="@color/white"
        android:padding="10dp"
        android:textColor="#666666"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/feedback_contact_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:hint="@string/hint_contact_info"
        android:textColorHint="#cccccc"
        android:background="@color/white"
        android:padding="10dp"
        android:textColor="#666666"
        android:singleLine="true"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</LinearLayout>
