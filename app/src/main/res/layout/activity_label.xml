<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42.66dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/frame_search"
            android:layout_width="300dp"
            android:layout_height="26.66dp"
            android:layout_marginTop="7.33dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_search"
            android:gravity="center_vertical"
            android:layout_toStartOf="@+id/cancel"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="13.33dp"
                android:layout_height="13.33dp"
                android:layout_marginStart="8.66dp"
                app:srcCompat="@drawable/ic_search" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="7.66dp"
                android:hint="搜索标签"
                android:background="@null"
                android:textColor="#CBCBCB"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="12dp"
            android:gravity="center_vertical"
            android:textColor="#656565"
            android:text="@string/cancel" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        app:tabGravity="fill"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:tabTextAppearance="@style/tab_text"
        app:tabSelectedTextColor="#7DCDF3"
        app:tabIndicator="@drawable/ic_label_tab_indicator"
        app:tabRippleColor="@android:color/transparent"
        app:tabIndicatorFullWidth="false" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>