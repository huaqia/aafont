<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6.33dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="设置"
            android:textColor="#666666"
            android:textSize="14.67sp"
            android:layout_marginStart="12.33dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <RelativeLayout
                android:id="@+id/my_draft"
                android:layout_width="match_parent"
                android:layout_height="46.67dp"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:text="我的草稿"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="23.33dp"
                    android:layout_height="23.33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="11.67dp"
                    android:src="@drawable/ic_goto"
                    android:layout_marginEnd="2dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <RelativeLayout
                android:id="@+id/change_passwd"
                android:layout_width="match_parent"
                android:layout_height="46.67dp"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:text="@string/change_passwd"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="23.33dp"
                    android:layout_height="23.33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="11.67dp"
                    android:src="@drawable/ic_goto"
                    android:layout_marginEnd="2dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:id="@+id/push_notice"
                android:layout_width="match_parent"
                android:layout_height="46.67dp"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:text="@string/push_notice"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="23.33dp"
                    android:layout_height="23.33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="11.67dp"
                    android:src="@drawable/ic_goto"
                    android:layout_marginEnd="2dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <RelativeLayout
                android:id="@+id/help_feedback"
                android:layout_width="match_parent"
                android:layout_height="46.67dp"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:text="@string/help_feedback"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="23.33dp"
                    android:layout_height="23.33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="11.67dp"
                    android:src="@drawable/ic_goto"
                    android:layout_marginEnd="2dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:id="@+id/give_star"
                android:layout_width="match_parent"
                android:layout_height="46.67dp"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:text="@string/give_star"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="23.33dp"
                    android:layout_height="23.33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="11.67dp"
                    android:src="@drawable/ic_goto"
                    android:layout_marginEnd="2dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <RelativeLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="46.67dp"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:text="关于"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="23.33dp"
                    android:layout_height="23.33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="11.67dp"
                    android:src="@drawable/ic_goto"
                    android:layout_marginEnd="2dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <RelativeLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="46.67dp"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:text="退出登录"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="23.33dp"
                    android:layout_height="23.33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="11.67dp"
                    android:src="@drawable/ic_goto"
                    android:layout_marginEnd="2dp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
