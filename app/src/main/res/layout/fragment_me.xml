<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/msg_appbar"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:clipChildren="false"
            android:fitsSystemWindows="true"
            android:background="@drawable/ic_user_bg"
            app:layout_behavior="com.xinmei365.font.ui.widget.FlingBehavior">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:clipChildren="true"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_setting"
                        android:layout_width="26.67dp"
                        android:layout_height="26.67dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_me_setting"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="76.67dp"
                        android:layout_height="76.67dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_setting" />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="25dp"
                        android:textColor="#FFFFFF"
                        android:textSize="14.67sp"
                        android:text="11"
                        app:layout_constraintStart_toEndOf="@+id/profile_image"
                        app:layout_constraintTop_toTopOf="@+id/profile_image" />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/app_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="11dp"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:text="22"
                        app:layout_constraintStart_toEndOf="@+id/profile_image"
                        app:layout_constraintTop_toBottomOf="@+id/user_name" />
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/gender_icon"
                        android:layout_width="26.67dp"
                        android:layout_height="26.67dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="9dp"
                        android:src="@drawable/ic_sex_boy"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profile_image" />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/profile_edit"
                        android:layout_width="66.67dp"
                        android:layout_height="26.67dp"
                        android:layout_marginStart="11.33dp"
                        android:background="@drawable/ic_me_edit_bg"
                        android:paddingStart="21dp"
                        android:paddingTop="5dp"
                        android:text="编辑资料"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@+id/gender_icon"
                        app:layout_constraintTop_toTopOf="@+id/gender_icon" />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/edit_intro"
                        android:layout_width="143.33dp"
                        android:layout_height="26.67dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="9dp"
                        android:paddingStart="28dp"
                        android:paddingTop="5dp"
                        android:text="点击此处填写个人简介..."
                        android:textColor="#cccccc"
                        android:textSize="10sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:background="@drawable/ic_me_intro_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profile_edit"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <LinearLayout
                        android:id="@+id/focus_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="46dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/follow_area"
                        app:layout_constraintBottom_toBottomOf="@+id/work_area" >
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/focus_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="10"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/focus_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="关注"
                            android:textColor="#FFFFFF"
                            android:textSize="8sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/follow_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="46dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/work_area"
                        app:layout_constraintBottom_toBottomOf="@+id/work_area">
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/follow_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="10"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/follow_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="粉丝"
                            android:textColor="#FFFFFF"
                            android:textSize="8sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/work_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" >
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/work_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="10"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/work_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="获赞与收藏"
                            android:textColor="#FFFFFF"
                            android:textSize="8sp" />
                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/user_tab_layout_bg">
                <android.support.design.widget.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    app:tabGravity="fill"
                    app:tabTextAppearance="@style/tab_text"
                    app:tabSelectedTextColor="#7DCDF3"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    app:tabIndicator="@drawable/ic_label_tab_indicator"
                    app:tabRippleColor="@android:color/transparent"
                    app:tabIndicatorFullWidth="false" />
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/create_new"
                    android:layout_width="26.67dp"
                    android:layout_height="26.67dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_create_new" />
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior" />
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>