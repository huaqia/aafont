<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6.33dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="通知设置"
            android:textColor="#666666"
            android:textSize="14.67sp"
            android:layout_marginStart="12.33dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46.67dp"
                android:gravity="center_vertical"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:text="@string/like_notice"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/like_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="7.67dp"
                    app:track="@drawable/ic_push_setting" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46.67dp"
                android:gravity="center_vertical"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:text="@string/favorite_notice"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/favorite_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="7.67dp"
                    app:track="@drawable/ic_push_setting" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46.67dp"
                android:gravity="center_vertical"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:text="@string/follow_notice"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/follow_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="7.67dp"
                    app:track="@drawable/ic_push_setting" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46.67dp"
                android:gravity="center_vertical"
                android:background="@color/white">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:text="@string/comment_notice"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/comment_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="7.67dp"
                    app:track="@drawable/ic_push_setting" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
