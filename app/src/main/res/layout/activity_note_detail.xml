<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.NoteDetailActivity">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/gang_2"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="40dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_select_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/image_select_close"
                android:layout_toStartOf="@+id/action_area"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_icon"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/avatar"
                    android:scaleType="centerCrop" />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:textColor="#666666"
                    android:ellipsize="end"
                    android:textSize="14.67sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_area"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/focus_action"
                    android:layout_width="50dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_follow"
                    android:layout_marginTop="8dp"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/colorActiveState"
                    android:layout_marginEnd="11dp" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/more_action"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_more"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/cons_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_alignParentTop="true">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/dynamic_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/page_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/ic_publish_action"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="12sp" />
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/note_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cons_img">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/download_font"
                        android:orientation="vertical">
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/note_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginStart="11dp"
                            android:maxLines="2"
                            android:gravity="start"
                            android:textColor="#343434"
                            android:textSize="14.67sp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/note_intro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginStart="11dp"
                            android:gravity="start"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/note_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginStart="11dp"
                            android:gravity="start"
                            android:textColor="#9A9A9A"
                            android:textSize="8sp" />
                    </LinearLayout>
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/download_font"
                        android:layout_width="60dp"
                        android:layout_height="23.33dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginStart="11.33dp"
                        android:layout_marginEnd="11.33dp"
                        android:layout_alignParentEnd="true"
                        android:text="下载"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp"
                        android:paddingStart="27.67dp"
                        android:paddingTop="3dp"
                        android:background="@drawable/ic_download"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:id="@+id/gang_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginTop="16dp"
                    android:layout_below="@+id/note_info"
                    android:background="#4ECCCCCC" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/comment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="11dp"
                    android:layout_below="@id/gang_1"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textColor="#666666"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:id="@+id/comment_action"
                    android:layout_below="@id/comment_title"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/comment_icon"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/avatar"
                        android:scaleType="centerCrop" />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/to_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/ic_comment_bg"
                        android:text="爱评论的人运气都不差~"
                        android:gravity="center_vertical"
                        android:paddingStart="14dp"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp" />
                </LinearLayout>

                <com.xinmei365.font.ui.widget.CommentExpandAbleListView
                    android:id="@+id/comment_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/comment_action"
                    android:layout_alignParentBottom="true"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none" />
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <View
        android:id="@+id/gang_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/action_bar"
        android:background="#4ECCCCCC" />

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/action_comment"
            android:layout_width="160dp"
            android:layout_height="27dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/ic_comment_bottom_bg">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/action_imageview"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="11dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_comment_hint_icon" />

            <TextView
                android:id="@+id/action_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:text="说点什么..."
                android:textColor="#9A9A9A"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/to_like"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:srcCompat="@drawable/ic_to_like" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_favorite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/to_favorite"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:srcCompat="@drawable/ic_to_favorite" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/favorite_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_msg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/to_msg"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:srcCompat="@drawable/ic_comment_icon" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/msg_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

