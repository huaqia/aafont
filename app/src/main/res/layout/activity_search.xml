<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43.33dp">

        <LinearLayout
            android:id="@+id/frame_search"
            android:layout_width="300dp"
            android:layout_height="26.66dp"
            android:layout_marginTop="7.33dp"
            android:layout_marginStart="9.66dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_search"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="13.33dp"
                android:layout_height="13.33dp"
                android:layout_marginStart="8.66dp"
                app:srcCompat="@drawable/ic_search" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_query"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="7.66dp"
                android:hint="@string/hint_search_attention"
                android:background="@null"
                android:textColor="#CBCBCB"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textSize="12sp" />

        </LinearLayout>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="12dp"
            android:gravity="center_vertical"
            android:textColor="#656565"
            android:text="@string/cancel" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="29.66dp"
        android:orientation="horizontal" >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/leading_icon"
            android:layout_width="3.33dp"
            android:layout_height="20dp"
            android:layout_marginStart="9.99dp"
            android:layout_marginTop="9.66dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_search_leading" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_history_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6.66dp"
            android:layout_marginTop="14dp"
            android:text="@string/history_search"
            android:textColor="#656565"
            android:textSize="12sp"
            android:layout_toEndOf="@+id/leading_icon"/>
    
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/clear_all_records"
            android:layout_width="16.66dp"
            android:layout_height="16.66dp"
            android:layout_marginTop="11.66dp"
            android:layout_toStartOf="@+id/clear_all_text"
            android:src="@drawable/ic_search_clear_all" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/clear_all_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13.66dp"
            android:layout_alignParentEnd="true"
            android:text="清空"
            android:textColor="#656565"
            android:textSize="10sp" />
    </RelativeLayout>

    <com.xinmei365.font.ui.widget.TagFlowLayout
        android:id="@+id/fl_search_records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        app:tag_gravity="left"
        app:is_limit="true"
        app:limit_line_count="3"
        app:max_select="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="29.66dp"
        android:orientation="horizontal" >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/hot_leading_icon"
            android:layout_width="3.33dp"
            android:layout_height="20dp"
            android:layout_marginStart="9.99dp"
            android:layout_marginTop="9.66dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_search_leading" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/hot_search_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6.66dp"
            android:layout_marginTop="14dp"
            android:text="热门搜索"
            android:textColor="#656565"
            android:textSize="12sp"
            android:layout_toEndOf="@+id/hot_leading_icon"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/refresh_hot_records"
            android:layout_width="16.66dp"
            android:layout_height="16.66dp"
            android:layout_marginTop="11.66dp"
            android:layout_toStartOf="@+id/refresh_hot_txt"
            android:src="@drawable/ic_search_refresh" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/refresh_hot_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13.66dp"
            android:layout_alignParentEnd="true"
            android:text="换一批"
            android:textColor="#656565"
            android:textSize="10sp" />
    </RelativeLayout>

    <com.xinmei365.font.ui.widget.TagFlowLayout
        android:id="@+id/hot_search_records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        app:tag_gravity="left"
        app:is_limit="true"
        app:limit_line_count="3"
        app:max_select="1" />

</LinearLayout>